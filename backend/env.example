# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-generate-with-secrets-token-urlsafe-32
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-with-secrets-token-urlsafe-32

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-change-in-production

# Database
DATABASE_URL=sqlite:///portfolio.db

# CORS Origins (comma-separated, add your frontend URL)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
ADMIN_EMAIL=your-email@gmail.com

# GitHub (Optional)
GITHUB_TOKEN=your-github-token-here

# Port
PORT=5001
